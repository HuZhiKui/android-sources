<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lineOne"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:src="@drawable/c"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="118dp"

            android:text="通 讯 录"
            android:textColor="@color/orange_dark"
            android:textSize="60dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineone"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_add"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text=" 添 加 "
        android:textSize="22dp"  />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linefour"
        android:layout_below="@+id/lineTree"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_look"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:text=" 查 看 "
        android:textSize="22dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linefive"
        android:layout_below="@+id/lineTree"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btn_query"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:text=" 查 询 "
        android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linenine"
        android:layout_below="@+id/lineTree"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <View
            android:layout_height="0.5dip"
            android:background="#686868"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linesix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineTree"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="460dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="拨打电话:"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineeight"
        android:layout_below="@+id/lineTree"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/phone_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lineseven"
        android:layout_below="@+id/lineTree"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="260dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_boru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text=" 一键拨入 "
            android:textStyle=""
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>
