<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="6"
    android:rowCount="8"
    >

    <EditText
        android:id="@+id/danwei1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_marginLeft="4px"
        android:gravity="center"
        android:textSize="45dp" />
    <EditText
        android:id="@+id/k1"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="4px"
        android:gravity="center"
        android:textSize="45dp" />
    <EditText
        android:id="@+id/danwei2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_marginLeft="4px"
        android:gravity="center"
        android:textSize="45dp" />
    <EditText
        android:id="@+id/k2"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="4px"
        android:gravity="center"
        android:textSize="45dp" />

    <Button
        android:id="@+id/button_m"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="m"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/button_cm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:text="cm"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/button_dm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:text="dm"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/button_mm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="3"
        android:text="mm"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:text="1"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button22"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:text="2"
        android:textSize="40dp" />
    <Button
        android:id="@+id/button33"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_weight="3"
        android:textSize="40dp"
        android:text="3" />

    <Button
        android:id="@+id/button44"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:text="4"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button55"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_weight="1"
        android:textSize="40dp"
        android:text="5" />
    <Button
        android:id="@+id/button66"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_weight="1"
        android:textSize="40dp"
        android:text="6" />

    <Button
        android:id="@+id/button77"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_weight="1"
        android:text="7"
        android:textSize="40dp" />

    <Button
        android:id="@+id/button88"

        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_weight="1"
        android:textSize="40dp"
        android:text="8" />

    <Button
        android:id="@+id/button99"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_weight="1"
        android:textSize="40dp"
        android:text="9" />

    <Button
        android:id="@+id/button00"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_weight="1"
        android:textSize="40dp"
        android:text="0" />
    <Button
        android:id="@+id/button_dian"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="2"
        android:layout_weight="1"
        android:text="."
        android:textSize="40dp" />
    <Button
        android:id="@+id/button_clear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="3"
        android:textSize="30dp"
        android:text="清零"
        />

    <Button
        android:id="@+id/buttonBB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="3"
        android:layout_weight="1"
        android:textSize="15dp"
        android:text="Backspace" />

    <Button
        android:id="@+id/button_EE"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="3"
        android:layout_weight="1"
        android:text="="
        android:textSize="40dp" />
</GridLayout>